<h1>Listing designs</h1>

<table class="table table-hover">
  <tr>
		<th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Challenge</th>
    <th>Username</th>
    <th>Hidden</th>
    <th>Score</th>   
    <th>Votes</th>   
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @designs.each do |design| %>
  <tr>
    <td><%= image_tag design.main_image.image.url(:thumb) if design.main_image %></td>
    <td><%= design.name %></td>
    <td><%= design.description %></td>
    <td><%= design.challenge.name if design.challenge %></td>
    <td><%= design.username %></td>
    <td><%= design.hidden %></td>
    <td><%= design.score %></td>  
    <td><%= design.vote_count %></td>  
    <td><%= link_to 'Show', design %></td>
    <td><%= link_to 'Edit', edit_design_path(design) %></td>
    <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

