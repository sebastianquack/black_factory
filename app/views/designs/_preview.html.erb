
<div class=" col-sx-6 col-sm-6 col-md-4 col-lg-4">

	<div class="preview card preview-link" data-url="<%= url_for controller: "designs", action: "show_public", id: design.id, only_path: true %>">
	
		<img class="media-object" src="<%= design.main_image.image.url(:medium) if design.main_image %>" alt="<%= design.main_image.description if design.main_image %>">
		<div class="card-content">
			<h4 class="shade-highlight">
				<%= design.name %>
				<span class="label label-info label-new shade-highlight" data-age="<%= Time.now.to_time.to_i - design.created_at.to_time.to_i %>">Neu</span>
			</h4>
			<b>Bewertung:</b><%= design.score %> (<%= design.vote_count %>)<br/>
		</div>
	
	</div>
	<form>
			<input class="star required" type="radio" name="test-1-rating-5" value="1"/>
	    <input class="star" type="radio" name="test-1-rating-5" value="2"/>
  	  <input class="star" type="radio" name="test-1-rating-5" value="3"/>
    	<input class="star" type="radio" name="test-1-rating-5" value="4"/>
	    <input class="star" type="radio" name="test-1-rating-5" value="5"/>
	</form>
	
</div>
