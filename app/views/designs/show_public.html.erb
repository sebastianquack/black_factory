<%= link_to "Zurück", controller: "challenges", action: "show_public", id: @design.challenge %><br/>

<p>
  <b>Name:</b>
  <%= @design.name %>
</p>

<p>
  <b>Description:</b>
  <%= @design.description %>
</p>

<p>
  <b>Challenge:</b>
  <%= @design.challenge.name %>
</p>

<p>
  <b>Bewertung (Durchschnitt):</b>
  <% 	votes = VoteCookie.where(design_id: @design.id)
  		sum_votes = votes.sum('vote')
  		num_votes = votes.size
  %>
  <%= sum_votes.to_f / num_votes.to_f %> (<%= num_votes %> Bewertungen)
</p>

<p>
	<b>Deine Bewertung:</b>
	<% for i in 1..5
				if @vote_cookie.vote
					if i <= @vote_cookie.vote
						concat link_to "★", controller: "designs", action: "vote", id: @design, value: i
					else
						concat link_to "☆", controller: "designs", action: "vote", id: @design, value: i	
					end 
				else 
					concat link_to "☆", controller: "designs", action: "vote", id: @design, value: i	
				end
		end %>
	
<p>
  <b>Comments:</b><br/>
  <% @design.comments.each do |comment| %>
  	<% unless comment.hidden %>
  	<%= comment.username + ': ' + comment.content %><br/>
  	<% end %>
  <% end %>
</p>
