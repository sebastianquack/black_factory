<div class="row">

	<div class="col-sm-6 col-md-6 col-lg-4">

		<div class="static-section card">
	
			<%= image_tag @challenge.main_image.image.url(:large) if @challenge.main_image %>
	
			<div class="challenge card-content">
					
				<div id="image_thumbs">	
				<% @challenge.images.each do |image| %>
						<%= image_tag image.image.url(:thumb) if image.id != @challenge.main_image_id %>
				<% end %>
				</div>
				
				<% if Time.now > @challenge.time %>
	
				<form>
				<div class="media-list">
					<div class="media">
						<input id="imageupload_button" class="imageupload_button" type="file" name="image[image]" data-url="/images/upload_public" value="Bild hochladen">
						<%= hidden_field_tag :challenge_id, @challenge.id %>
						<div id="progress" class="progress progress-striped active">
							<div class="bar progress-bar progress-bar-info" style="width: 0%;"></div>
						</div>
					</div>
			  </div>
			  </form>
				
				<% end %>
								
				<h2>
				  <%= @challenge.name %>
				</h2>
				
				<p>
				  <%= l @challenge.time %>
				</p>
				
				<p>
				  <%= @challenge.description %>
				</p>
			
			</div>
			
		</div>

		<% @comments = @challenge.comments %>
		<%= render 'comments/list_public' %>

	</div>
	
	
	<div class="designs col-sm-6 col-md-6 col-lg-8">
		
		<% if @challenge.time > Time.now %>
			<div class="col-sx-6 col-sm-6 col-md-4 col-lg-4">
				<div class="preview card preview-link" data-url="<%= url_for controller: "designs", action: "creator", challenge_id: @challenge.id %>">
					<div class="card-content">
						<h4 class="shade-highlight">Create Design</h4>
					</div>
				</div>
			</div>
		<% else %>
	
			<%= render partial: "designs/winner_preview", locals: {design: @designs_sorted[0] } %>
	
		<% end %>
		
		<% @designs_sorted.each.with_index do |design,i| %>

			<% unless @challenge.time < Time.now && i == 0 %>
				<%= render partial: "designs/preview", locals: {design: design, index: i} %>
			<% end %>
				
		<% end %>

	</div>
	
</div>
