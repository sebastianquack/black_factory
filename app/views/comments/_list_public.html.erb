<div class="comments">

	<%= render 'comments/form_public' %>
	
	<% @comments.each do |comment| %>
		<% unless comment.hidden %>
		<div class="comment well-sm well">
			<q class=""><%= comment.content %></q>
			<small class="pull-right username"><%= comment.username %></small>
			<small class="pull-right created_at"><%= l comment.created_at %></small>
		</div>
		<% end %>
	<% end %>
	
	<button type="button" class="btn btn-default btn-lg btn-block">Alle Kommentare anzeigen</button>
	
</div>