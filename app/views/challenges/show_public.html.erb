<div class="row">

	<div class="col-sm-6 col-md-6 col-lg-4 static-section">
	
		<div class="challenge">
		
			<%= image_tag @challenge.main_image.image.url(:large) if @challenge.main_image %>
		
			<% @challenge.images.each do |image| %>
					<%= image_tag image.image.url(:thumb) %>
			<% end %><br/>
			
			<p>
			  <b>Name:</b>
			  <%= @challenge.name %>
			</p>
			
			<p>
			  <b>Time:</b>
			  <%= @challenge.time %>
			</p>
			
			<p>
			  <b>Description:</b>
			  <%= @challenge.description %>
			</p>
		
		</div>
	
		<div class="comments">
			<% @comments = @challenge.comments %>
			<%= render 'comments/list_public' %>
		</div>
		
	</div>
	
	
	<div class="designs col-sm-6 col-md-6 col-lg-8">
		
		<a class="creator-link btn btn-success btn-lg" href="<%= url_for controller: "designs", action: "creator", challenge_id: @challenge.id %>">Create Design</a>

		  <% @designs_sorted.each do |design| %>
		
				<%= render partial: "designs/preview", locals: {design: design} %>
				
		  <% end %>

	</div>
	
</div>
