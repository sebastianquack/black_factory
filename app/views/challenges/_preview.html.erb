<div class="preview-link" data-url="<%= url_for controller: "challenges", action: "show_public", id: challenge %>">

<%= image_tag challenge.main_image.image.url(:medium) if challenge.main_image %>

<h2><%= challenge.name %></h2>

<h3><%= l challenge.time, :format => :long %></h3>
<span class="countdown" data-time="<%= challenge.time.to_i %>"></span>

<p><%= challenge.description %></p>

<span class="badge"><%= challenge.designs.count %></span>

</div>