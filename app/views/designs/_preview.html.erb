<div class="preview preview-link col-sm-6 col-md-6 col-lg-4">

	  <a href="<%= url_for controller: "designs", action: "show_public", id: design.id, only_path: true %>">
		<img class="media-object" src="<%= design.main_image.image.url(:thumb) if design.main_image %>" alt="<%= design.main_image.description if design.main_image %>">
	  </a>
	  <div class="">
		<h4 class="">
			<a href="<%= url_for controller: "designs", action: "show_public", id: design.id, only_path: true %>"><%= design.name %></a> 
			<span class="label label-new" data-age="<%= Time.now.to_time.to_i - design.created_at.to_time.to_i %>">Neu</label>
		</h4>
		<b>Bewertung:</b>
		<%= design.score %> (<%= design.vote_count %> Bewertungen)
	  </div>

</div>